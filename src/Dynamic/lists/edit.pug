extends ../layout
block content
    section.section
        .container
            .hero
                .hero-body.has-text-centered
                    h1.title.is-size-1 #{data.id ? `Edit List: ${data.id}` : ' Add List'}
                    h4.title.is-size-4.is-primary #{__('site_name')} - #{__('short_desc')}

            .columns
                .column.is-half-desktop.is-full-mobile
                    .card.is-box-shadow
                        .card-content
                            include ../Includes/forms/list

