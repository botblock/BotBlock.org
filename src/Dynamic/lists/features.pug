extends ../layout
block content
    section.section
        .container
            .hero
                .hero-body.hero-slim
                    .has-text-centered
                        h1.title.is-size-1 List Features
                        h5.title.is-size-4.is-primary #{__('site_name')} - #{__('short_desc')}

            .columns
                .column.is-half.is-full-mobile
                    .card.is-box-shadow
                        .card-content
                            p.has-text-white
                                | The following features are currently stored by #{__('site_name')} for each list:
                                br
                                i Click on a feature to search for all bot lists with that feature

                            - checkboxes = checkboxes.map(checkbox => { checkbox.value = true; return checkbox})
                            include ../Includes/checkboxes

            include ../Includes/listsfooter
