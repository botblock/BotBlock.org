doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        - page_title = (title ? `${title} - ` : '') + `${__('site_name')} - ${__('short_desc')}`
        title #{page_title}
        link(rel='canonical', href=route)
        meta(name='viewport', content='width=device-width, initial-scale=1.0, user-scalable=yes, maximum-scale=5.0')

        meta(property='og:title', content=page_title)
        meta(property='og:site_name', content=__('site_name'))
        meta(property='og:url', content=route)
        meta(property='og:image', content='/assets/img/icon.png')
        meta(property='og:locale', content=language || 'en_US')
        meta(property='og:description', content=__('full_desc'))

        meta(name='twitter:card', content='summary')
        meta(name='twitter:site', content='@BlockBotOrg')
        meta(name='twitter:title', content=page_title)
        meta(name='twitter:description', content=__('full_desc'))
        meta(property='twitter:image', content='/assets/img/icon.png')

        meta(name='robots', content='index, follow')

        meta(name='keywords', content='botblock, bot, bots, block, bot block, botblock list, bot block list, botblock services, \n' +
        'bot block services, botblock service list, bot block service list, botblock services list, bot block services list, \n' +
        'discord botblock, discord bot block, discord botblock list, discord bot block list, list, discord, discord bot, \n' +
        'discord bots, discord bot list, discord bots list, bot list, bot list list, discord list, discord list list, \n' +
        'discord bot services, discord bot service, discord bot services list, discord bot service list, discord services list, \n' +
        'discord service list, bot services, bot service, bot services list, bot service list, discord api, bot list api, \n' +
        'bot api, api, list api, botlist api, discordapi, discord bot api, discord list api, discord bot list api')

        meta(name='description', content=__('site_name') + ' - ' + __('full_desc'))
        meta(name='theme-color', content='#359DC4')
        link(rel='shortcut icon', href='/assets/img/icon.png')

        meta(name='apple-mobile-web-app-title', content=__('site_name'))
        meta(name='apple-mobile-web-app-capable', content='yes')
        meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
        meta(name='apple-touch-icon', href='/assets/img/apple-touch-icon.png')

        link(rel='manifest', href='/assets/site.webmanifest')
        link(rel='stylesheet', href='/assets/css/style.min.css')

        include Includes/fullstory

        block header
    body
        include Includes/sidebar
        main
            block content
            include Includes/footer

        script(async src='https://www.googletagmanager.com/gtag/js?id=' + GACode)
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag('js', new Date());
            gtag('config', '#{GACode}');
        script(src='/assets/js/lazyimages.js')
        script(src='/assets/js/main.js')
        block footer
